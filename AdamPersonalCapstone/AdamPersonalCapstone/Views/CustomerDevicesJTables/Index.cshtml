                            @Html.DisplayFor(modelItem => item.Device.Brand)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Device.Name)
                        </td>
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.CustomerDevicesJTableId })
                                @Html.ActionLink("Details", "Details", new { id = item.CustomerDevicesJTableId }) |*@
                            <a class="badge" style="color: deepskyblue" @Html.ActionLink("Delete", "Delete", new { id = item.CustomerDevicesJTableId })></a>
