@model IEnumerable<AdamPersonalCapstone.Models.Device>

@{
    ViewBag.Title = "Index";
}

<h1 class="display-4">Build Your Device Profile</h1>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="jumbotron">
    <div class="container-fluid">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Owned)
                    </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @*<td>
                            @Html.CheckBoxFor(modelItem => item.Owned)
                        </td>*@
                    <td>
                        <a class="badge" style="color: deepskyblue" @Html.ActionLink("Save To Profile", "AddDevice", "CustomerDevicesJTables", new { id = item.DevicesId }, null)></a>
                        <a class="badge" style="color: deepskyblue" @Html.ActionLink("Remove From Profile", "RemoveDevice", "CustomerDevicesJTables", new { id = item.DevicesId }, null)></a>
                    </td>

                </tr>
            }

        </table>
        </div>
</div>