@{
    ViewBag.Title = "Map";
}
<!DOCTYPE html>

<h1 style="color:deepskyblue; text-align:center">Nerd Map</h1>

<head>
    <title>NeighborNerd Map</title>
    <meta name="viewport" content="initial-scale=1.0" />
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/Content/Site.css" />
    <style>
        .img-container {
            text-align: center;
            display: block;
        }
    </style>
</head>
<body>
    @*<div class="jumbotron" style="text-align:center">*@
        <div class="container-fluid" style="padding: 30px; margin: 30px">
            <div class="row">
                <div class="col">
                    <span class="img-container">
                        <img src="~/Content/Image/nhn3.png" alt="Neighborhood Nerd Logo">
                    </span>
                    <br />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div id="map"></div>
                </div>
            </div>
        </div>
    @*</div>*@
    <script>
        var map;
        function createMap() {
            var options = {
                center: { lat: 43.0389, lng: -87.9065 },
                zoom: 10
            };
            map = new google.maps.Map(document.getElementById('map'), options);

            // Create marker
            var marker1 = new google.maps.Marker({
              map: map,
              position: new google.maps.LatLng(43.0851705, -87.8913918),
              title: 'Nerd - Adam'
            });

            var marker2 = new google.maps.Marker({
              map: map,
              position: new google.maps.LatLng(43.03978, -87.9118359),
              title: 'Nerd - Adam'
            });

            var marker3 = new google.maps.Marker({
              map: map,
              position: new google.maps.LatLng(42.962356, -88.060349),
              title: 'Nerd - Adam'
            });

            // Add circle overlay and bind to marker
            var circle = new google.maps.Circle({
              map: map,
              radius: 2000,    // 1 mile = 1609 meters
              fillColor: '#AA0000'
            });
            circle.bindTo('center', marker1, 'position');
            var circle = new google.maps.Circle({
              map: map,
              radius: 2000,
              fillColor: '#AA0000'
            });
            circle.bindTo('center', marker2, 'position');
            var circle = new google.maps.Circle({
              map: map,
              radius: 2000,
              fillColor: '#AA0000'
            });
            circle.bindTo('center', marker3, 'position');

            google.maps.event.addListener(marker1, 'click', function () {
                @Html.Action("MapClick", "Customers")
            });

            @*google.maps.event.addListener(marker2, 'click', function () {
                @Html.Action("MapClick", "Customers")
            })*@

            @*google.maps.event.addDomListener(marker3, 'click', function () {
                @Url.Action("MapClick", "Customers");
            })*@
        }
    </script>

    <script src=@ViewBag.MapUrl async defer></script>
</body>
</html>