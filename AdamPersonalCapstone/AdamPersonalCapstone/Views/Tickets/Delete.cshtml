@model AdamPersonalCapstone.Models.Ticket

@{
    ViewBag.Title = "Delete";
}
<head>
    <style>
        .img-container {
            text-align: center;
            display: block;
        }
    </style>
</head>
<body>
    <h2 style="color:deepskyblue; text-align:center"></h2>

    <h3 style="color:deepskyblue; text-align:center">Are you sure you want to delete this?</h3>
    <div>
        <h4>Ticket</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.MessageSent)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MessageSent)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Subject)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Subject)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Message)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Message)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
    <span class="img-container">
        <img src="~/Content/Image/nhn3.png" alt="Neighborhood Nerd Logo">
    </span>
</body>