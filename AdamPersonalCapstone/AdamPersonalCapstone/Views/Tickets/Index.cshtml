@model IEnumerable<AdamPersonalCapstone.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        .img-container {
            text-align: center;
            display: block;
        }
    </style>
</head>
<body>
    <div class="jumbotron" style="text-align:center">
        <h1 style="color:deepskyblue; text-align:center">List of Tickets</h1>
        <span class="img-container">
            <img src="~/Content/Image/nhn3.png" alt="Neighborhood Nerd Logo">
        </span>
        <div class="container-fluid">
            <table class="table" style="color:deepskyblue">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Device.Brand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Device.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MessageSent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Message)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isClaimed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isCompleted)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Device.Brand)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Device.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MessageSent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isClaimed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isCompleted)
                        </td>
                        <td>
                        </td>
                        <td>
                            <div><a class="badge" style="color: white" @Html.ActionLink("Edit", "Edit", new { id = item.TicketId })></a></div>
                            <a class="badge" style="color: white" @Html.ActionLink("Details", "Details", new { id = item.TicketId })></a>
                            <a class="badge" style="color: white" @Html.ActionLink("Delete", "Delete", new { id = item.TicketId })></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</body>